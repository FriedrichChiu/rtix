<div class="flex justify-end bg-red-500">
  <span class="px-2 py-2 text-white cursor-pointer" data-controller="cart" data-action="click->cart#showCart" >
    購票清單(<span id="ticket_count"><%= @ticket_count%></span>)
  </span>
</div>

<div class="cart" id="cart">
<% seat.each do |s|%>
  <div class="bg-red-500 my-2 mx-2 rounded relative py-2">
    <span class="px-2"><%= s.area%><%= s.id%>號位</span><br>
    <span class="px-2">$<%= s.ticket.price%></span>
    <div class="absolute right-1 top-0 z-10 cursor-pointer" 
         data-controller="cart"
         data-action="click->cart#cancelled"
         data-item-id="<%= s.line_item.id%>"
         >Ｘ</div>
  </div>
<% end %>
  <div class="bg-red-500 rounded w-1/3 my-2 cursor-pointer mx-auto text-white text-center">
    Submit!
  </div>
</div>

<%# 分隔線 %>


<div class="row">
  <% seats.each do |s| %>
      <div 
          class="seat
          <%= 'selected' if seat_status(s.id) === 'selected' %>" 
          data-seat-id="<%= s.id%>" 
          data-controller="seat"
          data-action ="click->seat#addLineItem"
      ></div>
  <% end %>
</div>