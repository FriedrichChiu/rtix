  <% @focusevent.each do |event| %>
  <div>
    <div class="flex flex-col ">
        <div class="bg-white mx-2 shadow-md rounded-3xl p-4 group hover:shadow-lg hover:border-transparent">
                    <div class="flex-none lg:flex">
                        <div class=" lg:w-2/3 h-full w-full lg:h-48 lg:mb-0 mb-3 group-hover:opacity-80">
                        <img src=<%= event.image_url %> class=" w-full object-scale-down lg:object-cover  lg:h-48 rounded-2xl">
                        </div>
                        <div class="lg:w-1/3 mx-2 py-2 px-2 lg:relative  ">
                            <h2 class=" text-lg font-medium  pb-2">
                                <%= event.title %>
                            </h2>
                            <div class="flex p-4 pb-2 border-t border-gray-200 "></div>
                            <div class="text-sm font-medium flex justify-around lg:flex-col lg:absolute lg:bottom-5 lg:ml-5">
                                
                                    <button
                                        class="w-24 mb-2 md:mb-0 bg-white text-center py-2 shadow-sm tracking-wider border text-gray-600 rounded-full group-hover:bg-gray-100  items-center space-x-2 lg:mb-1 ">
                                        <%= date_convert(event.start_time) %>
                                    </button>
                                <button
                                    class="w-24 mb-2 md:mb-0 bg-gray-900 text-center py-2 shadow-sm tracking-wider text-white rounded-full group-hover:bg-red-700"
                                     aria-label="like"><%= link_to '購票去', event_path(event.id) %>
                                </button>
                            </div>


                        </div>

                    </div>

                </div>
    </div>
  </div>
  <% end %>
