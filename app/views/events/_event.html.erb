<% @best_events.each do |event| %>
<div class="text-center box-border p-3 float-left w-full md:w-1/2 lg:w-1/3 h-96">
    <div class="border-2 border-gray-200 rounded-lg p-3 bg-gray-50 shadow-2xl h-full" >
      <%= link_to event_path(event.id) do %>
        <div class="h-48" >
            <% if event.image? %>
            <img src=<%= event.image_url %> class="rounded-lg h-full">
            <% else %>
            <img src="/image/activity.png" class="rounded-lg h-full">
            <% end %>
        </div>
        <div class=" flex flex-col justify-between">
            <h5 class="font-bold tex-xl mt-1"><%= event.title %></h5>
            <p class="text-sm h-24 w-full rounded-lg text-left p-3 overflow-auto "><%= event.description %></p>
            
        </div>
        <% end %>
    </div>
</div>
<% end %>

