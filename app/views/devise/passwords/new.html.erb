
<div class="overall">
  <div class="devise_title">您註冊的信箱</div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="our_field">
      <%= f.label :email, class:'devise_label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "請輸入您註冊的信箱", class: "devise_input" %>
    </div>

    <div class="include_submit">
      <%= f.submit "送出", class: "devise_submit"  %>
    </div>
  <% end %>
</div>
