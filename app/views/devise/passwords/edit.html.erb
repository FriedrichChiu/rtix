<div  class="overall">
  <div class="devise_title">改變您的密碼</div>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
  
    <div class="our_field">
      <%= f.label :password, "新的密碼", class:'devise_label' %><br />
      <% if @minimum_password_length %>
        (至少 <%= @minimum_password_length %> 位數英數字元)<br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "devise_input" %>
    </div>
  
    <div class="our_field">
      <%= f.label :password_confirmation, "確認新的密碼", class:'devise_label' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise_input" %>
    </div>
  
    <div class="include_submit">
      <%= f.submit "改變您的密碼", class: "devise_submit" %>
    </div>
  <% end %>
</div>

