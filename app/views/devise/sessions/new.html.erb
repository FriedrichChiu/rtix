<div class="overall">
  <div class="devise_title">登入</div>
  <%= flash[:notice] %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="our_field">
      <%= f.label :email, class:'devise_label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise_input" %>
    </div>

    <div class="our_field">
      <%= f.label :密碼, class:'devise_label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "devise_input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="our_field">
        <%= f.check_box :remember_me %>
        <%= f.label '記住我的帳號密碼' %>
      </div>
    <% end %>

    <div class="include_submit">
      <%= f.submit "登入",  class: "devise_submit" %>
    </div>
  <% end %>
    <div class="devsie_cutline"></div>
    <div>還沒有帳號嗎？</div>
    <div>
      <%= link_to "註冊", new_registration_path(resource_name), class:'devise_login' %>
    </div>
    <div>其他問題：</div>
      <%= link_to "忘記密碼嗎？", new_password_path(resource_name), class:'devise_login' %>
    <div>其他登入方式：</div>
    <div class="third_party">
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>
        <div class="party_log"><i class="fab fa-google"></i> ｜ Google</div>
      <% end %>
      <%= link_to user_facebook_omniauth_authorize_path, method: :post do %>
        <div class="party_log"><i class="fab fa-facebook"></i> ｜ Facebook</div>
      <% end %>
      <%= link_to user_github_omniauth_authorize_path, method: :post do %>
        <div class="party_log"><i class="fab fa-github"></i> ｜ Github</div>
      <% end %>
    </div>
</div>